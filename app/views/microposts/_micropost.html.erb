<li id="micropost-<%= micropost.id %>">
  <% if micropost.user.avatar? %>
    <%= link_to avatar_for(micropost.user, size:"50x50"), micropost.user %>
  <% else %>
    <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <% end %>
  
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_for micropost %>
  </span>
  <span class="timestamp">
    <%= t('common.posted') %> <%= time_ago_in_words(micropost.created_at) %> <%= t('common.ago') %>
    <% if current_user == micropost.user %>
      <%= link_to t('common.delete'), micropost, method: :delete,
                                       data: { confirm: t('common.yousure') } %>
    <% else %>
      <%= render 'microposts/favorite_form',  favorite: micropost  if logged_in? %>
    <% end %>
  </span>
</li>