<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t('common.Micropost_Feed')%></h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t('common.Welcom_message')%></h1>

    <%= link_to t('common.Welcom_message'), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>