<h1>Edit profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :region %>
      <%= f.text_field :region %>

      <%= f.label :profile %>
      <%= f.text_area :profile %>

      <%= f.submit "Change my profile", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>